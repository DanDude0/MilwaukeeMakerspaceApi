<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - MilwaukeeMakerspaceApi</title>
	<style>
		body {
			background-color: #000;
			color: #fff;
			font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
			margin: 15px;
		}

		h1 {
			font-size: 14pt;
			margin: 0;
			display: inline-block;
			padding: 5px 0;
		}

		nav {
			margin: -16px -16px 0 -16px;
			padding: 7px 20px;
			background-color: #333;
			font-size: 12pt;
		}

		a {
			color: #f98;
			text-decoration: none;
		}

			a:hover {
				text-decoration: underline;
			}

		ul.menu {
			border: 0 0 0 2px solid #999;
			margin: 0;
			padding: 0 0 0 30px;
			display: inline-block;
		}

			ul.menu li {
				display: inline-block;
				padding: 0 15px;
				margin: 0;
			}
	</style>
</head>
<body>
	<nav>
		<h1>Milwaukee Makerspace Api</h1>
		<ul class="menu">
			<li><a asp-area="" asp-controller="Home" asp-action="Index" class="nav-link">Home</a></li>
			<li><a asp-area="" asp-controller="Info" asp-action="Index" class="nav-link">Current Area Funding</a></li>
			<li><a asp-area="" asp-controller="Info" asp-action="Balances" class="nav-link">Area Funding Balances</a></li>
		</ul>
	</nav>
	<div class="container body-content">
		@RenderBody()
		<hr />
		<footer>
			<p>&copy; 2018 - MilwaukeeMakerspaceApi</p>
		</footer>
	</div>
	@RenderSection("Scripts", required: false)
</body>
</html>
