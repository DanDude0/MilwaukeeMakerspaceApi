@model Mms.Database.fund
@{
	Layout = null;
}

<html>
<head>
	<title>
		Member Status
	</title>
	<style>
		body {
			background-color: #000;
			color: #fff;
			font-size: 32pt;
			font-family: helvetica;
			font-weight: normal;
			overflow: hidden;
		}

		.wrapper {
			position: relative;
			display: block;
			width: 40em;
			margin: auto;
			vertical-align: middle;
			text-align: center;
		}

		table {
			font-size: inherit;
			width: 100%;
			text-align: inherit;
			vertical-align: inherit;
			margin: 0;
		}

		h1 {
			font-size: 4.5em;
			font-weight: normal;
			margin: -0.15em 0;
		}

		h2 {
			font-size: 2.8em;
			font-weight: normal;
			margin: 0;
		}

		h3 {
			font-size: 2em;
			font-weight: normal;
			margin: 0;
		}
	</style>
</head>
<body>
	<div class='wrapper'>
		<h2 style='margin: -0.23em 0 0.1em 0;'>Member Count</h2>
		<table style='margin: 0.1em 5em; width: 30em;'>
			<tr>
				<td rowspan='2'>
					<h1>@Model.members</h1>
				</td>
				<td>
					<h3>General: @Model.general</h3>
				</td>
			</tr>
			<tr>
				<td>
					<h3>Family: @Model.family</h3>
				</td>
			</tr>
		</table>
		<h2 style='margin: 0.3em 0 0.25em 0;'>This Month's Area Funding</h2>
		<table>
			<tr>
				<td>
					Total Funds: $@Model.total<br />
					Building Purchase: $@Model.building_purchase<br />
					3D Printers: $@Model.threed_printer<br />
					Casting: $@Model.casting<br />
					Ceramic Studio: $@Model.ceramic<br />
					CNC Room: $@Model.cnc<br />
					Cosplay: $@Model.cosplay<br />
					Craft Lab: $@Model.craft<br />
				</td>
				<td>
					Dalek Asylum: $@Model.dalek<br />
					Digital Production $@Model.digital<br />
					Electronic Lab: $@Model.electronic<br />
					Finishing: $@Model.finishing<br />
					Forge: $@Model.forge<br />
					Jewelry: $@Model.jewelry<br />
					Laser Cutters: $@Model.laser<br />
					Leather Working: $@Model.leather<br />
					Maker Faire: $@Model.makerfaire<br />
				</td>
				<td>
					Metal Shop: $@Model.metal<br />
					Paint Room: $@Model.paint<br />
					Power Wheels: $@Model.power_wheel<br />
					Print Shop: $@Model.print<br />
					Soda Fund: $@Model.soda<br />
					Vacuum Former: $@Model.vacuum<br />
					Welders: $@Model.welding<br />
					Wood Shop: $@Model.wood<br />
				</td>
			</tr>
		</table>
	</div>
</body>
</html>
